<h1> Menu Items </h1>
<a href="<%= new_admin_menu_item_path %>">Add a new item</a>

<% @menu_items.in_groups_of(4, false) do |group| %>
  <div class="row">
    <% group.each do |menu_item| %>
      <% next if menu_item.nil? %>
      <div class="col-sm-3">
        <div class="panel">
          <div class="panel-header">
            <%= image_tag(menu_item.picture.url(:small)) %>
          </div>
          <div class="panel-body">
            <h3><%= menu_item.name %></h3>
            <p><%= number_to_currency(menu_item.price) %></p>
          </div>
          <div class="panel-footer text-center">
            <%= link_to('See More', admin_menu_item_path(menu_item), class: 'btn btn-success') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<div class="paginate">
  <%= paginate(@menu_items) %>
</div>
