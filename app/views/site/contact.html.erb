<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="page-header">Contact Us</h1>
    <p class='lead'>
      Just shoot us a note, and we'll get back as soon as we can!
    </p>

    <%= form_tag(submit_contact_path, role: 'form', class: 'form-horizontal') do %>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
        <%= text_field_tag(:name, '', class: 'form-control', placeholder: 'name') %>
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
        <%= text_field_tag(:email, '', class: 'form-control', placeholder: 'email') %>
        </div>
      </div>
      <div class="form-group">
        <label for="subject" class="col-sm-2 control-label">Subject</label>
        <div class="col-sm-10">
        <%= text_field_tag(:subject, '', class: 'form-control', placeholder: 'subject') %>
        </div>
      </div>
      <div class="form-group">
        <label for="question" class="col-sm-2 control-label">Question</label>
        <div class="col-sm-10">
        <%= text_field_tag(:question, '', class: 'form-control', placeholder: 'question') %>
        </div>
      </div>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag('Send', class: 'btn btn-info btn-lg') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
